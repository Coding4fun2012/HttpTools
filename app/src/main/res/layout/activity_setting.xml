<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:elevation="4dp"
            android:layout_margin="4dp"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <!--通用-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="12dp"
                    android:text="通用"
                    android:textColor="@color/colorAccent"
                    android:textSize="16dp" />

                <LinearLayout
                    android:id="@+id/setting_ll_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="添加头部"
                            android:textColor="@color/settingTitle"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/setting_tv_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="为Http请求添加Header"
                            android:textColor="@color/settingMessage"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <Switch
                        android:id="@+id/setting_switch_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>

                <include layout="@layout/separate_line" />

                <LinearLayout
                    android:id="@+id/setting_ll_md5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="加密字段"
                            android:textColor="@color/settingTitle"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/setting_tv_md5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="为某一指定字段进行MD5加密"
                            android:textColor="@color/settingMessage"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <Switch
                        android:id="@+id/setting_switch_md5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>

                <include layout="@layout/separate_line" />

                <LinearLayout
                    android:id="@+id/setting_ll_highlight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="高亮状态码"
                            android:textColor="@color/settingTitle"
                            android:textSize="18dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="对状态码进行对应颜色的高亮"
                            android:textColor="@color/settingMessage"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <Switch
                        android:id="@+id/setting_switch_highlight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>

                <include layout="@layout/separate_line" />

                <LinearLayout
                    android:id="@+id/setting_ll_showAll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="显示完整结果"
                            android:textColor="@color/settingTitle"
                            android:textSize="18dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="显示接收到的Response的完整结果"
                            android:textColor="@color/settingMessage"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <Switch
                        android:id="@+id/setting_switch_showAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>

                <include layout="@layout/separate_line" />

                <LinearLayout
                    android:id="@+id/setting_ll_loop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="循环发送"
                            android:textColor="@color/settingTitle"
                            android:textSize="18dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="多次请求同一接口"
                            android:textColor="@color/settingMessage"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <Switch
                        android:id="@+id/setting_switch_loop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>

                <include layout="@layout/separate_line" />

                <LinearLayout
                    android:id="@+id/setting_ll_cache"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="清除缓存"
                            android:textColor="@color/settingTitle"
                            android:textSize="18dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="清除输入框自动补全缓存"
                            android:textColor="@color/settingMessage"
                            android:textSize="14dp" />
                    </LinearLayout>
                </LinearLayout>

                <!--联系-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="12dp"
                    android:text="联系"
                    android:textColor="@color/colorAccent"
                    android:textSize="16dp" />

                <LinearLayout
                    android:id="@+id/setting_ll_qq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="QQ"
                            android:textColor="@color/settingTitle"
                            android:textSize="18dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="614457662"
                            android:textColor="@color/settingMessage"
                            android:textSize="14dp" />
                    </LinearLayout>
                </LinearLayout>

                <include layout="@layout/separate_line" />

                <LinearLayout
                    android:id="@+id/setting_ll_mail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="邮箱"
                            android:textColor="@color/settingTitle"
                            android:textSize="18dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ykh@dreamgo.tech"
                            android:textColor="@color/settingMessage"
                            android:textSize="14dp" />
                    </LinearLayout>
                </LinearLayout>

                <include layout="@layout/separate_line" />

                <LinearLayout
                    android:id="@+id/setting_ll_donate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="捐赠"
                            android:textColor="@color/settingTitle"
                            android:textSize="18dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="买个煎饼给开发者补补脑 :)"
                            android:textColor="@color/settingMessage"
                            android:textSize="14dp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>
    </LinearLayout>
</ScrollView>